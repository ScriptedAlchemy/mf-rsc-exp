  "private": true,
  "packageManager": "pnpm@10.8.1",
  "engines": {
    "node": ">=14.9.0"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/core": "7.21.3",
    "@babel/plugin-transform-modules-commonjs": "^7.21.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/register": "^7.21.0",
    "@module-federation/enhanced": "^0.21.4",
    "acorn-jsx": "^5.3.2",
    "acorn-loose": "^8.3.0",
    "babel-loader": "8.3.0",
    "compression": "^1.7.4",
    "concurrently": "^7.6.0",
    "date-fns": "^2.29.3",
    "excerpts": "^0.0.3",
    "express": "^4.18.2",
    "html-webpack-plugin": "5.5.0",
    "marked": "^4.2.12",
    "pg": "^8.10.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-error-boundary": "^3.1.4",
    "react-server-dom-webpack": "workspace:*",
    "resolve": "1.22.1",
    "rimraf": "^4.4.0",
    "sanitize-html": "^2.10.0",
    "shared-notes-db": "workspace:*",
    "server-only": "^0.0.1",
    "webpack": "5.76.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3"
  },
  "scripts": {
    "start": "concurrently \"npm run server:dev\" \"npm run bundler:dev\"",
    "start:prod": "concurrently \"npm run server:prod\" \"npm run bundler:prod\"",
    "server:dev": "cross-env NODE_ENV=development node --watch --conditions=react-server server",
    "server:prod": "cross-env NODE_ENV=production node --conditions=react-server server",
    "bundler:dev": "cross-env NODE_ENV=development WATCH=1 node scripts/build.js",
    "bundler:prod": "cross-env NODE_ENV=production node scripts/build.js",
    "seed": "node ./scripts/seed.js"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ]
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "build/*"
    ]
  }
}
