{
  "name": "server-components-demo",
  "private": true,
  "packageManager": "pnpm@10.8.1",
  "dependencies": {
    "react": "workspace:*",
    "react-client": "workspace:*",
    "react-dom": "workspace:*",
    "react-dom-bindings": "workspace:*",
    "react-server": "workspace:*",
    "react-server-dom-webpack": "workspace:*",
    "shared": "workspace:*"
  },
  "devDependencies": {
    "cross-env": "^7.0.3"
  },
  "pnpm": {
    "overrides": {
      "react-is": "npm:react-is",
      "jsdom": "22.1.0"
    },
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  },
  "scripts": {
    "build": "pnpm run build:react-rsdw",
    "build:react-rsdw": "cd react && NODE_PATH=$PWD/packages:$PWD/node_modules JAVA_HOME=/opt/homebrew/opt/openjdk@21 PATH=\"/opt/homebrew/opt/openjdk@21/bin:$PATH\" RELEASE_CHANNEL=stable node ./scripts/rollup/build.js react-server-dom-webpack/ --type=NODE_DEV,NODE_PROD,ESM_PROD,NODE_ES2015",
    "start:app1": "pnpm --filter app1 start",
    "start:app2": "pnpm --filter app2 start",
    "test:e2e": "pnpm --filter e2e test"
  }
}
